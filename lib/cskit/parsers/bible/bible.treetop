# encoding: UTF-8

require 'cskit/parsers/bible/nodes'
require 'cskit/parsers/bible/objects'

module CSKit
  module Parsers

    grammar Bible
      rule citation
        book [\s]* chapter_list <CitationNode>
      end

      rule chapter_list
        chapter ([\s]* ";" [\s]* chapter_list)? <ChapterListNode>
      end

      rule book
        [\w\.]+ <BookNode>
      end

      rule chapter
        [\d]+ [\s]* ":" [\s]* verse_list <ChapterNode>
      end

      rule verse_list
        verse ([\s]* "," [\s]* verse_list)? <VerseListNode>
      end

      rule verse
        (compound_verse_number / verse_number) [\s]* start_fragment [\s]* terminator <VerseNode>
      end

      rule compound_verse_number
        verse_number [\s]* "-" [\s]* verse_number <CompoundVerseNumberNode>
      end

      rule verse_number
        [\d]+ <VerseNumberNode>
      end

      rule start_fragment
        ([^\(\)\,\;]+ <FragmentNode>)?
      end

      rule fragment
        [^\(\)]+ <FragmentNode>
      end

      rule terminator
        ("(" [\s]* "to" [\s]* cardinality [\s]* fragment [\s]* ")" <TerminatorNode>)?
      end

      rule cardinality
        ("1st" / "2nd" / "3rd")?
      end
    end

  end
end
